{% comment %}
  Collection Banner Section - Modern Vuexy Design
{% endcomment %}

<section class="collection-banner-section">
  <!-- Background with Gradient Overlay -->
  <div class="banner-background">
    {% if collection.image %}
      <img src="{{ collection.image | image_url: width: 1920 }}" 
           alt="{{ collection.title }}"
           class="banner-bg-image"
           loading="eager">
    {% endif %}
    <div class="banner-overlay"></div>
    <div class="banner-particles" id="bannerParticles-{{ section.id }}"></div>
  </div>
  
  <div class="container">
    <div class="banner-content">
      <!-- Breadcrumb -->
      {% if section.settings.show_breadcrumb %}
      <nav class="banner-breadcrumb" aria-label="Breadcrumb">
        <a href="{{ routes.root_url }}">
          <i class="fa-solid fa-house"></i>
          <span>Home</span>
        </a>
        <i class="fa-solid fa-chevron-right separator"></i>
        <a href="{{ routes.collections_url }}">Collections</a>
        <i class="fa-solid fa-chevron-right separator"></i>
        <span class="current">{{ collection.title }}</span>
      </nav>
      {% endif %}
      
      <!-- Title with Icon -->
      {% if section.settings.show_title %}
      <div class="banner-title-wrapper">
        <div class="title-icon">
          <i class="fa-solid fa-layer-group"></i>
        </div>
        <h1 class="banner-title">{{ collection.title }}</h1>
      </div>
      {% endif %}
      
      <!-- Short Description -->
      {% if section.settings.show_description and collection.description != blank %}
      <p class="banner-description">
        {{ collection.description | strip_html | truncate: 150 }}
      </p>
      {% endif %}
      
      <!-- Stats Bar -->
      <div class="banner-stats">
        {% if section.settings.show_product_count %}
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fa-solid fa-box-open"></i>
          </div>
          <div class="stat-info">
            <span class="stat-value">{{ collection.products_count }}</span>
            <span class="stat-label">Products</span>
          </div>
        </div>
        {% endif %}
        
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fa-solid fa-truck-fast"></i>
          </div>
          <div class="stat-info">
            <span class="stat-value">Free</span>
            <span class="stat-label">Shipping $50+</span>
          </div>
        </div>
        
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fa-solid fa-shield"></i>
          </div>
          <div class="stat-info">
            <span class="stat-value">100%</span>
            <span class="stat-label">Guaranteed</span>
          </div>
        </div>
        
        <div class="stat-item">
          <div class="stat-icon">
            <i class="fa-solid fa-star"></i>
          </div>
          <div class="stat-info">
            <span class="stat-value">4.9</span>
            <span class="stat-label">Rating</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative Wave -->
  <div class="banner-wave">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V120Z" fill="white"/>
    </svg>
  </div>
</section>

<style>
.collection-banner-section {
  position: relative;
  min-height: 320px;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.banner-background {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.banner-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.banner-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.85) 100%);
}

.banner-particles {
  position: absolute;
  inset: 0;
  pointer-events: none;
  overflow: hidden;
}

.banner-particle {
  position: absolute;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  animation: floatUp 15s linear infinite;
}

@keyframes floatUp {
  0% { transform: translateY(100%) rotate(0deg); opacity: 0; }
  10% { opacity: 0.5; }
  90% { opacity: 0.5; }
  100% { transform: translateY(-100%) rotate(360deg); opacity: 0; }
}

.collection-banner-section .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 60px 20px 80px;
  position: relative;
  z-index: 2;
}

.banner-content {
  text-align: center;
}

/* Breadcrumb */
.banner-breadcrumb {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  padding: 10px 20px;
  border-radius: 50px;
  margin-bottom: 24px;
  font-size: 0.85rem;
}

.banner-breadcrumb a {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  transition: color 0.3s ease;
}

.banner-breadcrumb a:hover {
  color: #fff;
}

.banner-breadcrumb .separator {
  font-size: 0.65rem;
  color: rgba(255, 255, 255, 0.5);
}

.banner-breadcrumb .current {
  color: #fff;
  font-weight: 600;
}

/* Title */
.banner-title-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16px;
  margin-bottom: 16px;
}

.title-icon {
  width: 56px;
  height: 56px;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-icon i {
  font-size: 1.5rem;
  color: #fff;
}

.banner-title {
  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 800;
  color: #fff;
  margin: 0;
  letter-spacing: -0.02em;
  text-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

/* Description */
.banner-description {
  max-width: 600px;
  margin: 0 auto 28px;
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

/* Stats Bar */
.banner-stats {
  display: inline-flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 12px;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 10px;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  padding: 12px 18px;
  border-radius: 14px;
  transition: all 0.3s ease;
}

.stat-item:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: translateY(-2px);
}

.stat-icon {
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-icon i {
  font-size: 1rem;
  color: #fff;
}

.stat-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.stat-value {
  font-size: 1.1rem;
  font-weight: 700;
  color: #fff;
  line-height: 1.2;
}

.stat-label {
  font-size: 0.75rem;
  color: rgba(255, 255, 255, 0.75);
}

/* Wave */
.banner-wave {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 3;
  line-height: 0;
}

.banner-wave svg {
  width: 100%;
  height: 60px;
}

/* Responsive */
@media (max-width: 768px) {
  .collection-banner-section {
    min-height: 280px;
  }
  
  .collection-banner-section .container {
    padding: 50px 16px 70px;
  }
  
  .banner-title-wrapper {
    flex-direction: column;
    gap: 12px;
  }
  
  .title-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
  }
  
  .title-icon i {
    font-size: 1.25rem;
  }
  
  .banner-description {
    font-size: 1rem;
  }
  
  .banner-stats {
    gap: 8px;
  }
  
  .stat-item {
    padding: 10px 14px;
  }
  
  .stat-icon {
    width: 34px;
    height: 34px;
  }
  
  .stat-value {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .banner-breadcrumb {
    padding: 8px 14px;
    font-size: 0.75rem;
  }
  
  .stat-item {
    flex: 1 1 calc(50% - 8px);
    min-width: 140px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('bannerParticles-{{ section.id }}');
  if (!container) return;
  
  for (let i = 0; i < 15; i++) {
    const particle = document.createElement('div');
    particle.className = 'banner-particle';
    particle.style.cssText = `
      left: ${Math.random() * 100}%;
      width: ${Math.random() * 6 + 2}px;
      height: ${Math.random() * 6 + 2}px;
      animation-delay: ${Math.random() * 15}s;
      animation-duration: ${Math.random() * 10 + 10}s;
    `;
    container.appendChild(particle);
  }
});
</script>

{% schema %}
{
  "name": "Collection Banner",
  "tag": "section",
  "class": "collection-banner-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Collection Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Description (max 150 chars)",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show Product Count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumb",
      "label": "Show Breadcrumb",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collection Banner"
    }
  ]
}
{% endschema %}







